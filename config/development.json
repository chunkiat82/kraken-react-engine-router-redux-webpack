{
    "express": {
        "view engine": "js",
        "view": "require:react-engine/lib/expressView",
        "view cache": false,
        "views": "path:./src/public/views"
    },

    "view engines": {
        "js": {
            "module": "react-engine/lib/server",
            "renderer": {
                "method": "create",
                "arguments": [{
                    "routes": "require:./src/routes/react.js",
                    "routesFilePath": "path:./src/routes/react.js"
                }]
            }
        }
    },

    "middleware": {

        "static": {
            "module": {
                "arguments": ["path:./.build"]
            }
        },
        
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./src/public",
                    "path:./.build", {
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "/favicon.ico"
                        }
                    }
                ]
            }
        },

        "webpack": {
            "priority": 117,
            "module": "path:./middleware/webpack"
        },

        "router": {
            "module": {
                "arguments": [{
                    "directory": "path:./src/controllers"
                }]
            }
        }
    }
}
